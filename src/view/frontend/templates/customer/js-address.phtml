        includeStyle('<?= $escaper->escapeJs($block->getViewFileUrl('Dotdigitalgroup_Sms::css/hyva.css')) ?>');
        intlInput(
            "input[name='telephone']",
            JSON.parse("<?= $escaper->escapeJs($telephoneInputConfig->getConfig()); ?>")
        );
    });
</script>

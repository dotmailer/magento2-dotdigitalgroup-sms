        validationRule,
        intlInput,
        includeStyle
    } from '<?= $escaper->escapeJs($block->getViewFileUrl('Hyva_DotdigitalgroupSms::js/intl-input-validation.js')) ?>';
    window.addEventListener('alpine:init', () => hyva.formValidation.addRule(
        'validate-phone-number-with-checkbox',
        validationRule
    ));
